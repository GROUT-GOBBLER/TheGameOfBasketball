<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="basketballUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:basketballUI"
    Shell.FlyoutBehavior="Disabled"
    Title="basketballUI">


    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


    <ShellContent
        Title="Score Keeping Mode"
        ContentTemplate="{DataTemplate local:ScoreKeeper}"
        Route="ScoreKeeper" />

    <ShellContent
        Title="Player Select"
        ContentTemplate="{DataTemplate local:PlayerSelect}"
        Route="PlayerSelect" />

    <ShellContent
        Title="Free Throw"
        ContentTemplate="{DataTemplate local:FreeThrow}"
        Route="FreeThrow" />

</Shell>
