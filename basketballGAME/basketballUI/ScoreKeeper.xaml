<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="basketballUI.ScoreKeeper"
             Title="Score Keeping Mode">

    <VerticalStackLayout Padding="10">
        <!-- Header -->
        <Label Text="Score Keeping Mode"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,10"/>

        <!-- Row 1: 2PT and 3PT -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <!-- TWO POINTER MADE -->
            <Button
                x:Name="TwoPointMade"
                Text="2PT shot made"
                SemanticProperties.Hint="A player made a two-pointer."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>

            <!-- TWO POINTER MISSED -->
            <Button 
                x:Name="TwoPointMiss"
                Text="2PT shot missed"
                SemanticProperties.Hint="A player miss a two-pointer."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>

            <!-- THREE POINTER MADE -->
            <Button 
                x:Name="ThreePtMiss"
                Text="3PT shot made"
                SemanticProperties.Hint="A player made a three-pointer."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>
        
            <!-- THREE POINTER MISSED -->
            <Button 
                x:Name="ThreePointMiss"
                Text="3PT shot missed"
                SemanticProperties.Hint="A player missed a three-pointer."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>
        </HorizontalStackLayout>
        
        <!-- Row 2: Rebounds, Assist, Turnover -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,10,0,0">
        
            <!-- OFFENSIVE REBOUND -->
            <Button 
                x:Name="OffensiveRebound"
                Text="OffRebound"
                SemanticProperties.Hint="A player caught a rebound on offense."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>

            <!-- DEFENSIVE REBOUND -->
            <Button 
                x:Name="DefensiveRebound"
                Text="DefRebound"
                SemanticProperties.Hint="A player caught a rebound on defense."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>

            <!-- ASSIST -->
            <Button 
                x:Name="Assist"
                Text="Assist"
                SemanticProperties.Hint="A player made an assist."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>

            <!-- TURNOVER -->
            <Button 
                x:Name="Turnover"
                Text="TOver"
                SemanticProperties.Hint="A player has made a turnover."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>
        </HorizontalStackLayout>

        <!-- Row 3: Free Throw, Block, Steal -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,10,0,0">
            <!-- FREE THROW -->
            <Button 
                x:Name="FreeThrow"
                Text="Free throw"
                SemanticProperties.Hint="A player is shooting a freethrow."
                Clicked="OnFreeThrowClicked"
                WidthRequest="210" 
                Margin="5"/>

            <!-- BLOCK -->
            <Button 
                x:Name="Block"
                Text="Block"
                SemanticProperties.Hint="A player has blocked a shot."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>

            <!-- STEAL -->
            <Button 
                x:Name="Steal"
                Text="Steal"
                SemanticProperties.Hint="A player made a three-pointer."
                Clicked="OnActionButtonClicked"
                WidthRequest="100"
                Margin="5"/>
        </HorizontalStackLayout>

        <!-- Row 4: Foul, Back -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,10,0,0">
            <!-- FOUL -->
            <Button 
                x:Name="Foul"
                Text="Foul"
                SemanticProperties.Hint="A player has committed a foul."
                Clicked="OnActionButtonClicked"
                WidthRequest="210" 
                Margin="5"/>

            <!--<Button Text="Back" -->
            <!--Clicked="OnBackClicked" -->
            <!-- WidthRequest="210" -->
            <!-- Margin="5"/> -->
            
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
